<div class='col col-md-4 offset-md-4 col-xs-10 offset-xs-1 align-items-center box-shadow-3 p-0' style="margin-top: 7%;">
  <div class='card border-grey border-lighten-3 px-1 py-1 m-0 text-center'>
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autocomplete: "name" %>
    </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.file_field :profile_img %>
        <%= image_tag "#{@user.profile_img.file.present? ? @user.profile_img.url : ''}", class: "#{@user.profile_img.file.present? ? '' : 'hidden'} image_to_logo img-thumbnail" %>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>